{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ], 
    "paths": {
      "@app/*": ["./src/*"],
      "@config/*": ["./src/config/*"],
      "@task/*": ["./src/modules/task/*"]
    },
    "baseUrl": "./"
  }
}
